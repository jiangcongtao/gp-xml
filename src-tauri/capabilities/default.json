{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for the XML Navigator application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**/*" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**/*" }]
    },
    "shell:allow-open",
    "updater:default"
  ]
}

